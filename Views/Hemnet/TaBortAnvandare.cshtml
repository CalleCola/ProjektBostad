

@model ProjektBostad.Models.Anvandare

@{
    ViewData["Title"] = "Hantera Konto";
}

<style>
    body {
        background-image: url('/Bilder/bla.webp');
        background-size: cover;
        background-position: center;
        justify-content: center;
    }

    .login-form {
        max-width: 300px;
        margin: auto;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
    }

    .btn-primay {
        width: 100%;
        padding: 10px;
        background-color: red;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

.logout{
        width: 300px;
        margin: auto;
        padding: 10px 20px 20px;
        margin-left: -160px;
}
</style>

<h1>Hantera Konto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="TaBortAnvandare" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Anv_Namn" class="control-label">Användarnamn</label>
                <input asp-for="Anv_Namn" class="form-control" />
                <span asp-validation-for="Anv_Namn" class="text-danger">* </span>
            </div>

            <div class="form-group">
                <label asp-for="Losenord" class="control-label"> Lösenord</label>
                <input asp-for="Losenord" class="form-control" type="password" placeholder="Lösenord" />
                <span asp-validation-for="Losenord" class="text-danger">* </span>
            </div>

            <div class="form-group">
                <input type="submit" value="Radera Konto" class="btn btn-danger" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="UppdateraAnvandare" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Anv_Namn" class="control-label" >Användarnamn</label>
                <input asp-for="Anv_Namn" class="form-control" />
                <span asp-validation-for="Anv_Namn" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <label asp-for="Losenord" class="control-label">Nytt lösenord</label>
                <input asp-for="Losenord" class="form-control" type="password" placeholder="Nytt Lösenord" />
                <span asp-validation-for="Losenord" class="text-danger"> * </span>
            </div>

            <input type="hidden" asp-for="Losenord" />

            <div class="form-group">
                <input type="submit" value="Uppdatera Konto" class="btn btn-primary" />
            </div>
        </form>
        <div class="col-md-4">
            <form asp-action="LogIn" class="logout">
                <div class="form-group">
                    <input type="submit" value="Logga ut" class="btn btn-primay"/>
                </div>
            </form>
        </div>
    </div>
</div>
