
@model ProjektBostad.Models.Anvandare

@{
    ViewData["Title"] = "Skapa Användare";
}

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-image: url('/Bilder/cool.jpg');
        background-size: cover;
        background-position: center;
    }

    .login-form {
        max-width: 300px;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
</style>

<div class="login-container">
    <form asp-action="SkapaAnvandare" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Anv_Namn" class="form-control" placeholder="Användarnamn" />
            <span asp-validation-for="Anv_Namn" class="text-danger">*</span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="E-postadress" />
            <span asp-validation-for="Email" class="text-danger">*</span>
        </div>
        <div class="form-group">
            <input asp-for="Losenord" class="form-control" type="password" placeholder="Lösenord" />
            <span asp-validation-for="Losenord" class="text-danger">*</span>
        </div>
        <div class="form-group">
            <input type="submit" value="Skapa Konto" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <a href="@Url.Action("LogIn", "Hemnet")">Tillbaka</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
